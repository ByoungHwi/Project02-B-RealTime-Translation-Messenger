generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  nickname  String   @unique
  avatar    String
  password  String?
  lang      String
  rooms     Room[]
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model Room {
  id        Int      @id @default(autoincrement())
  avatar    String
  code      String   @unique
  users     User[]
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}
